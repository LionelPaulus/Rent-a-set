<%= form_with(model: place, local: true) do |form| %>
  <% if place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :place_user_id %>
  </div>

  <div class="field">
    <%= form.label :photo_id %>
    <%= form.text_field :photo_id, id: :place_photo_id %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :place_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :place_description %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :place_category %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :place_address, :autocomplete => :off %>
  </div>

  <div class="field">
    <%= form.label :ambience %>
    <%= form.text_field :ambience, id: :place_ambience %>
  </div>

  <div class="field">
    <%= form.label :exposure %>
    <%= form.number_field :exposure, id: :place_exposure %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :place_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<script type="text/javascript">
  var element = document.getElementById('place_address');
  function initAutocomplete() {
    google.maps.event.addDomListener(element, 'keydown', function(event) {
      if (event.keyCode === 13) {
        event.preventDefault();
      }
    });
    
    var autocomplete = new google.maps.places.Autocomplete(element, { types: ['geocode'] });
    autocomplete.addListener('place_changed', onPlaceChanged);
  }
  function onPlaceChanged() {
    var place = this.getPlace();
    element.value = place.formatted_address;
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCwluyRb2sgG_bfxjbL9RB7dj9dSTf7zU4&libraries=places&callback=initAutocomplete" async defer></script>
