<div class="container">
  <div class="row  justify-content-center">
    <div class="col-12">
      <div class="carousel slide Carousel-big" id="carousel" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @place.photos.each_with_index do |pic, i| %>
            <% if i == 0 %>
              <li data-target="#carousel" data-slide-to="<%= i %>" class="active"></li>
            <% else %>
              <li data-target="#carousel" data-slide-to="<%= i %>"></li>
            <% end %>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @place.photos.each_with_index do |pic, i| %>
            <% if i == 0 %>
              <div class="carousel-item active">
                <%= image_tag pic.image.url(:high), class: 'w-100' %>
              </div>
            <% else %>
              <div class="carousel-item">
                <%= image_tag pic.image.url(:high), class: 'w-100' %>
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="row">
        <div class="col-8">
          <p>
            <h2><%= @place.name %></h2>
          </p>
          <p>
            <strong>Category:</strong>
            <%= @place.category %>
          </p>
          <p>
            <% @place.tags.each do |tag| %>
            #<%= tag.name %>
            <% end %>
          </p>

          <hr>

          <p>
            <strong>Description:</strong>
            <%= @place.description %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= @place.address %>
          </p>

          <p>
            <strong>Area:</strong>
            <%= @place.area %>m²
          </p>

          <p>
            <strong>Latitude:</strong>
            <%= @place.latitude %>
          </p>

          <p>
            <strong>Longitude:</strong>
            <%= @place.longitude %>
          </p>

          <p>
            <strong>Exposure:</strong>
            <%= @place.exposure %>/5
          </p>

          <p>
            <strong>Price:</strong>
            $<%= @place.price %>/d
          </p>
        </div>
        <div class="col-4 vertical-divider">
          <%= form_for(@booking, url: {action: "create"}, local: true) do |form| %>
            <% if @booking.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

                <ul>
                <% booking.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            Price: <div id="place-price" style="display:inline;">0</div>€

            <%= form.hidden_field :place_id, id: :booking_place_id, :value => @place.id %>

            <%= form.label :start_time %>
            <%= form.datetime_local_field :start_time %>

            <%= form.label :end_time %>
            <%= form.datetime_local_field :end_time %>

            <div class="actions">
              <%= form.submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if flash[:notice] %>
<div id="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
<div id="alert"><%= flash[:alert] %></div>
<% end %>

<%= link_to 'Edit', edit_place_path(@place) %>
|
<%= link_to 'Back', places_path %>
